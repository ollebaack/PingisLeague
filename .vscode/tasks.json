{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "N8n",
      "type": "shell",
      "command": "npx n8n",
      "group": "none",
      "options": { "cwd": "${workspaceFolder}" },
      "presentation": { "reveal": "always", "panel": "dedicated" }
    },
    {
      "label": "Backend",
      "type": "shell",
      "command": "pnpm run setup-and-start",
      "group": "none",
      "options": { "cwd": "${workspaceFolder}/Backend" },
      "presentation": { "reveal": "always", "panel": "dedicated" }
    },
    {
      "label": "Frontend",
      "type": "shell",
      "command": "pnpm run setup-and-start",
      "group": "none",
      "options": { "cwd": "${workspaceFolder}/Frontend" },
      "presentation": { "reveal": "always", "panel": "dedicated" }
    },

    // ðŸŸ¢ Compound task that starts everything in parallel on folder open
    {
      "label": "Start All",
      "dependsOn": ["Backend", "Frontend"],
      "dependsOrder": "parallel",
      "runOptions": { "runOn": "folderOpen" },
      "problemMatcher": []
    }
  ]
}
